<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>강의 문의사항</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/pretendard/dist/web/static/pretendard.css" />

    <style>
        body { font-family: 'Pretendard', sans-serif; }
    </style>
</head>

<body class="bg-[#F5F7FA] text-gray-800">

{{> studentLayout/studentHeader }}

<main class="max-w-6xl mx-auto px-4 py-10">

    <!-- 상단 제목 -->
    <div class="mb-8">
        <h2 class="text-2xl font-bold text-gray-800 flex items-center gap-2">
            <i class="fa-solid fa-circle-question text-blue-600"></i>
            강의 문의사항
        </h2>
    </div>

    {{> studentCourse/_studentCourseSubNav }}

    <!-- 문의하기 버튼 -->
    <div class="flex justify-end mb-4 mt-2">
        <a href="/courseQuestionWriteForm?courseNo={{courseNo}}"
           class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm hover:bg-blue-700 shadow-sm">
            문의하기
        </a>
    </div>

    <!-- 리스트 박스 -->
    <div class="bg-white rounded-2xl shadow-md border border-gray-200 p-6 overflow-hidden">
        <table class="w-full text-sm">
            <thead>
                <tr class="bg-gray-50 text-gray-700 border-b">
                    <th class="py-3 px-4 w-14">번호</th>
                    <th class="py-3 px-4">제목</th>
                    <th class="py-3 px-4 w-28">작성자</th>
                    <th class="py-3 px-4 w-28">작성일</th>
                    <th class="py-3 px-4 w-20">상태</th>
                </tr>
            </thead>

            <tbody>
            {{#questionList}}
                <tr class="border-b hover:bg-gray-50">
                    <td class="py-3 px-4 text-gray-700">{{index}}</td>

                    <td class="py-3 px-4">
                        {{#privatePost}}
                        <i class="fa-solid fa-lock text-[11px] text-gray-400 mr-1"></i>
                        {{/privatePost}}

                        {{#canView}}
                        <a href="/courseQuestionDetail?courseQuestionNo={{courseQuestionNo}}"
                           class="text-gray-900 hover:text-blue-600 font-medium line-clamp-1">
                            {{courseQuestionTitle}}
                        </a>
                        {{/canView}}

                        {{^canView}}
                        <span class="text-gray-400">비밀글입니다.</span>
                        {{/canView}}
                    </td>

                    <td class="py-3 px-4 text-gray-600">{{writerName}}</td>
                    <td class="py-3 px-4 text-gray-600">{{createdate}}</td>

                    <td class="py-3 px-4 text-xs">
                        {{#answered}}
                        <span class="px-2 py-1 bg-green-50 text-green-700 rounded-full">답변완료</span>
                        {{/answered}}
                        {{^answered}}
                        <span class="px-2 py-1 bg-yellow-50 text-yellow-700 rounded-full">미답변</span>
                        {{/answered}}
                    </td>
                </tr>
            {{/questionList}}

            {{^questionList}}
                <tr>
                    <td colspan="5" class="py-10 text-center text-gray-500">등록된 문의가 없습니다.</td>
                </tr>
            {{/questionList}}
            </tbody>
        </table>
    </div>

    <!-- 페이징 -->
    <div class="flex justify-center mt-8">
        <div class="flex items-center gap-2">

            {{#hasPrev}}
            <a href="/courseQuestionList?courseNo={{courseNo}}&currentPage={{prevPage}}"
               class="px-3 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 text-sm">이전</a>
            {{/hasPrev}}

            {{#pageList}}
            {{#current}}
            <span class="px-3 py-2 bg-blue-600 text-white rounded text-sm">{{page}}</span>
            {{/current}}
            {{^current}}
            <a href="/courseQuestionList?courseNo={{courseNo}}&currentPage={{page}}"
               class="px-3 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 text-sm">{{page}}</a>
            {{/current}}
            {{/pageList}}

            {{#hasNext}}
            <a href="/courseQuestionList?courseNo={{courseNo}}&currentPage={{nextPage}}"
               class="px-3 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 text-sm">다음</a>
            {{/hasNext}}

        </div>
    </div>

    <!-- 뒤로가기 -->
    <div class="mt-6 flex justify-end">
        <a href="/studentCourseHome?courseNo={{courseNo}}"
           class="px-4 py-2 text-sm rounded-lg border text-gray-600 hover:bg-gray-50">
            강의 홈으로
        </a>
    </div>

</main>

</body>
</html>
