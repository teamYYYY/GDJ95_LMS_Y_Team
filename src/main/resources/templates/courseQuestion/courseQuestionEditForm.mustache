<!-- 문의 수정 폼 -->
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>문의 수정하기</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/pretendard/dist/web/static/pretendard.css" />

    <style>
        body { font-family: 'Pretendard', sans-serif; }
    </style>
</head>

<body class="bg-[#F5F7FA] text-gray-800">

{{> studentLayout/studentHeader }}

<main class="max-w-4xl mx-auto px-5 py-10">

    <!-- 뒤로가기 -->
    <a href="/courseQuestionDetail?courseQuestionNo={{question.courseQuestionNo}}"
       class="text-sm text-gray-500 hover:text-gray-700">
        ← 돌아가기
    </a>

    <!-- 수정 카드 -->
    <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-7 mt-5">

        <!-- 제목 -->
        <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center gap-2">
            <i class="fa-solid fa-pen-to-square text-blue-600"></i>
            문의 수정
        </h2>

        <!-- 수정 폼 -->
        <form action="/courseQuestionEdit" method="post">
            <!-- PK -->
            <input type="hidden" name="courseQuestionNo" value="{{question.courseQuestionNo}}">
            <input type="hidden" name="courseNo" value="{{question.courseNo}}">

            <!-- 제목 -->
            <label class="text-sm font-medium text-gray-700">제목</label>
            <input type="text"
                   name="courseQuestionTitle"
                   value="{{question.courseQuestionTitle}}"
                   class="mt-1 w-full border rounded-lg p-3 text-sm"
                   required>

            <!-- 내용 -->
            <label class="text-sm font-medium text-gray-700 mt-5 block">내용</label>
            <textarea name="courseQuestionContent"
                      class="mt-1 w-full border rounded-lg p-3 text-sm h-40"
                      required>{{question.courseQuestionContent}}</textarea>

            <!-- 비밀글 체크 -->
            <div class="mt-5 flex items-center gap-2">
                <input type="checkbox" name="privatePost"
                       class="w-4 h-4"
                       {{#question.privatePost}}checked{{/question.privatePost}}>
                <span class="text-sm">비밀글로 설정</span>
            </div>

            <!-- 버튼 -->
            <div class="flex justify-end gap-3 mt-6">
                <a href="/courseQuestionDetail?courseQuestionNo={{question.courseQuestionNo}}"
                   class="px-4 py-2 rounded-lg bg-gray-200 hover:bg-gray-300 text-sm">
                    취소
                </a>

                <button class="px-5 py-2 bg-blue-600 text-white rounded-lg text-sm hover:bg-blue-700">
                    수정완료
                </button>
            </div>

        </form>
    </div>

</main>

</body>
</html>
