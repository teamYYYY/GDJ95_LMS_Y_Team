<!-- 댓글 수정 페이지 -->
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>댓글 수정</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/pretendard/dist/web/static/pretendard.css" />

    <style>
        body { font-family: 'Pretendard', sans-serif; }
    </style>
</head>

<body class="bg-[#F5F7FA] text-gray-800">

{{> studentLayout/studentHeader }}

<main class="max-w-3xl mx-auto p-6">

    <!-- 뒤로가기 -->
    <a href="/courseQuestionDetail?courseQuestionNo={{answer.courseQuestionNo}}"
       class="text-sm text-gray-500 hover:text-gray-700">
        ← 돌아가기
    </a>

    <!-- 카드 -->
    <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-7 mt-5">

        <h2 class="text-lg font-semibold text-gray-900 mb-5 flex items-center gap-2">
            <i class="fa-solid fa-pen-to-square text-blue-600"></i>
            댓글 수정
        </h2>

        <form action="/courseQuestionAnswerEdit" method="post">
            <input type="hidden" name="answerNo" value="{{answer.answerNo}}">
            <input type="hidden" name="courseQuestionNo" value="{{answer.courseQuestionNo}}">

            <!-- 내용 -->
            <label class="text-sm font-medium text-gray-700">댓글 내용</label>
            <textarea name="answerContent"
                      class="w-full border rounded-lg p-3 text-sm h-40 mt-1"
                      required>{{answer.answerContent}}</textarea>

            <div class="flex justify-end gap-3 mt-6">
                <a href="/courseQuestionDetail?courseQuestionNo={{answer.courseQuestionNo}}"
                   class="px-4 py-2 bg-gray-200 rounded-lg hover:bg-gray-300 text-sm">
                    취소
                </a>

                <button class="px-5 py-2 bg-blue-600 text-white rounded-lg text-sm hover:bg-blue-700">
                    수정완료
                </button>
            </div>
        </form>

    </div>

</main>

</body>
</html>
