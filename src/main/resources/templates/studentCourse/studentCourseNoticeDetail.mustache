<!-- studentCourseNoticeDetail.mustache -->
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>공지 상세 | 학사관리시스템</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/pretendard/dist/web/static/pretendard.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body { font-family: 'Pretendard', sans-serif; }
    </style>
</head>

<body class="bg-[#F5F7FA] text-gray-800">

{{> studentLayout/studentHeader }}
{{> studentCourse/_studentCourseSubNav }}

<main class="max-w-6xl mx-auto px-4 py-10">

    <!-- 뒤로가기 버튼 -->
    <div class="mb-6">
        <a href="/studentCourseNoticeList?courseNo={{course.courseNo}}"
           class="inline-flex items-center gap-2 px-4 py-2 rounded-lg
                  bg-gray-200 hover:bg-gray-300 text-gray-700 text-sm font-medium">
            <i class="fa-solid fa-arrow-left"></i> 목록으로 돌아가기
        </a>
    </div>

    <!-- 공지 제목 및 기본 정보 -->
    <section class="bg-white rounded-2xl shadow-md border border-gray-100 p-6 mb-8">
        <p class="text-xs font-semibold text-blue-600 uppercase tracking-wide mb-1">
            <i class="fa-solid fa-bullhorn mr-1"></i> 공지사항
        </p>

        <h1 class="text-2xl font-bold text-gray-900 mb-4">
            {{detail.courseNoticeTitle}}
        </h1>

        <!-- 추가된 정보 영역 -->
        <div class="flex flex-wrap items-center gap-5 text-sm text-gray-600">

            <span>
                <i class="fa-solid fa-hashtag text-gray-500 mr-1"></i>
                공지 번호: <b>{{detail.courseNoticeNo}}</b>
            </span>

            <span>
                <i class="fa-solid fa-user text-gray-500 mr-1"></i>
                작성자: <b>{{detail.writerUserName}}</b>
            </span>

            <span>
                <i class="fa-solid fa-calendar-alt text-gray-500 mr-1"></i>
                등록일: {{detail.createdate}}
            </span>

        </div>
    </section>

    <!-- 공지 내용 -->
    <section class="bg-white rounded-2xl shadow-md border border-gray-100 p-8">
        <div class="whitespace-pre-line text-gray-800 leading-relaxed">
            {{detail.courseNoticeContent}}
        </div>
    </section>

</main>

{{> studentLayout/studentFooter }}

</body>
</html>
